extends layout

block content
  h1= title
  h5.text-left.text-black Login to your account ...
  
  // Login Form
  form(name='loginForm')
    .form-floating.m-2
      input#lemail.form-control(type='text' placeholder='Title' name='lemail')
      label.form-label(for='lemail') Email
    .form-floating.m-2
      input#lpassword.form-control(type='password' placeholder='Title' name='lpassword')
      label.form-label(for='lpassword') Password
    .col-12
      button.btn.btn-outline-primary(type='submit') Login
      <a href="/" class="btn btn-outline-danger" role="button">Close</a>
  
  if errors
    ul
      each error in errors
        li.alert.alert-danger.m3= error
